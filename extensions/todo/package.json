{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "todo",
  "title": "todo",
  "description": "Help managing todos by semi-automatically prioritising",
  "icon": "extension_icon.png",
  "author": "tpinna",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "To-do",
      "subtitle": "Manage and Prioritise to-dos",
      "description": "Manage your to-do list with semi-automatic prioritisation",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.48.3",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
